<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.janbe.quiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/quiz"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".userInterface.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".userInterface.settings.SettingsActivity"
            android:label="@string/settings">
        </activity>

        <activity android:name=".userInterface.quiz.multipleChoiceQuiz.MultipleChoiceQuizActivity"
            android:label="@string/quiz">
        </activity>

        <activity android:name=".userInterface.quiz.longListQuiz.LongListQuizActivity"
            android:label="@string/quiz">
        </activity>

        <activity android:name=".userInterface.result.ResultActivity"
            android:label="@string/results">
        </activity>

    </application>

</manifest>
